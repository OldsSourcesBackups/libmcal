CC=gcc
FLEX=flex

@BOOTSTRAP@

INCLUDE=@DRIVER_INCDIR@  ${OTHERINCDIR} -I.

CFLAGS=-O0 -Wall -g ${INCLUDE} ${OTHER_CFLAGS} -fPIC

LIBOBJS=mcal.o datetime.o lex.ical_yy.o icalroutines.o cal_misc.o $(DRIVER_LIBS) tester.o
ALLOBJS=${LIBOBJS}
OTHERLIBS=${OTHERLIBS}
OTHERLIBDIR=${OTHERLIBDIR}

LIBCAL=libmcal.a
LIBCAL_SO=libmcal.so

all: libmcal.a libmcal.so

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDE) -c $<

install: libmcal.a libmcal.so
	mkdir -p ${DESTDIR}@libdir@
	mkdir -p ${DESTDIR}@includedir@/mcal
	install -m 755 libmcal.a libmcal.so ${DESTDIR}@libdir@/
	install -m 644  \
	  mcal.h bool.h datetime.h drivers.h cal_misc.h icalroutines.h \
	  ${DESTDIR}@includedir@/mcal/
	touch installed

install-strip: installed
	strip ${DESTDIR}@libdir@/libmcal.so
	strip ${DESTDIR}@libdir@/libmcal.a

libmcal.a: $(LIBOBJS)
	rm -f $(LIBCAL)
	ar r $(LIBCAL) $(LIBOBJS)

libmcal.so: $(LIBOBJS)
	rm -f $(LIBCAL_SO)
	gcc $(LDFLAGS) -shared -o $(LIBCAL_SO) $(LIBOBJS)

lex.ical_yy.c: icalscanner.lex
	$(FLEX) $<

tester: tester.o libmcal.a
	gcc -Wall -g -o tester tester.o $(LIBCAL) -lcrypt

clean:
	rm -f *.o *~ core $(LIBCAL) $(LIBCAL_SO) tester installed 

distclean: clean
	rm -f  config.cache  config.status config.log Makefile drivers.c drivers.h bootstrap.in


dep: depend

depend:
	makedepend $(INCLUDE) -- $(ALLOBJS:%.o=%.c) >& /dev/null

